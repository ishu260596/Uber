<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_platform_appearance">
        <item name="neuButtonStartColor">#FF1100</item>
        <item name="neuButtonEndColor">#FF0057</item>
        <item name="neuButtonBorder1StartColor">#DA00FF</item>
        <item name="neuButtonBorder1EndColor">#0027FF</item>
        <item name="neuButtonBorder2StartColor">#008EFF</item>
        <item name="neuButtonBorder2EndColor">#FFE500</item>
        <item name="neuButtonPressedDarkShadowColor">#00FF0A</item>

    </style>

    <style name="pit_view_appearance">
        <item name="neuLightShadowColor">@color/black</item>
        <item name="neuDarkShadowColor">@color/cred</item>
        <item name="softEdgeColor">@color/light_blue</item>
        <item name="neuCompatColor">@color/light_orange</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/light_orange</item>
        <item name="android:colorControlActivated">@color/light_orange</item>
        <item name="android:colorControlHighlight">@color/light_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/cred</item>
        <item name="colorPrimaryDark">@color/cred</item>
        <item name="colorAccent">@color/light_orange</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/cred</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>